{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }} ☠️ !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ☠️</h1>
    This friendly message is coming from: 
    <h2>Your Servitor ☠️</h2>    
</div>

<section class="articles">
    {% for article in articles %}
        <article>
                <h2> {{ article.title }}</h2>
                <div class="metadata">written on the {{ article.createdAt | date('d/m/Y') }} at {{ article.createdAt | date('H:i') }} in the category {{ article.category.title }}</div>

                <div class="content">
                    <div class="d-flex flex-row bg-default m-2">
                        <div class="p-2 border border-dark bg-default"><img src="{{ article.image }}" height="200px" width="300px" alt="image"></div>
                        <div class="p-2 border border-dark bg-default">{{ article.content | raw }}</div>
                    </div>
                        <a href="{{ path('brain_show', {'id': article.id }) }}" class="btn btn-primary">Read more</a>
                </viv>
        </article>
    {% endfor %}
</section>
{% endblock %}

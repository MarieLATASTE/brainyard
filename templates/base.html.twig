<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link rel="stylesheet" href="https://bootswatch.com/4/slate/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {% block stylesheets %}{#{{ encore_entry_link_tags('app') }}#}{% endblock %}

        {% block javascripts %} {#{{ encore_entry_script_tags('app') }}#}{% endblock %}
    </head>

    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="{{ path('home') }}">BrainYard</a>



  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item">
        <a class="nav-link" href="{{ path('brain') }}">Articles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('brain_create') }}">Create Your Article</a>
      </li>
      
      {% if not app.user %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('security_login') }}">Come in</a>
        </li>
      {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('security_logout' )}}">Goodbye</a>
        </li>
      {% endif %}
    </ul>
  </div>
</nav>

<div class="fixed-bottom">
<table class="table table-hover">

  <tbody>
    <tr class="table-dark">
      <th scope="row"></th>
      <td>: octocat:</td>
      <td>BrainYard &copy; 2021</td>
      <td><button onclick="topFunction()" type="button" id="myBtn" title="Go to top" class="btn btn-outline-light">Top</button>
      </td>
    </tr>
  </tbody>
</table>
</div>

<script>
//Get the button
var mybutton = document.getElementById("myBtn");

// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0;
  document.documentElement.scrollTop = 0;
}
</script>

        



    <div class="container">
        {% block body %}
        
        {% endblock %}
    </div>
    </body>
</html>


